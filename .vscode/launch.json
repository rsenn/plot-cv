{
    "version": "0.2.0",
    "configurations": [
        

        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Server",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/../vscode-quickjs-debug/src/debugAdapter.ts",
            "runtimeExecutable": "node"
            "args": [
                "--server=4711"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ]
        },
        {
            "name": "Launch QuickJS",
            "type": "quickjs",
            "request": "launch",
            "program": "${workspaceFolder}/test-ecmascript2.js",
            "runtimeExecutable": "/usr/bin/env",
            "runtimeArgs": [  "QUICKJS_DEBUG_ADDRESS=localhost:9001",
                "/usr/local/bin/qjsm" ],
            "address": "127.0.0.1",
            "port": 9000
        },
        {
            "name": "Attach QuickJS (connect)",
            "type": "quickjs",
            "request": "launch",
            "program":  "${workspaceFolder}/test-ecmascript2.js",
            "runtimeExecutable": "/usr/bin/env",
            "runtimeArgs": [ "QUICKJS_DEBUG_ADDRESS=127.0.0.1:9001","/usr/local/bin/qjsm" ],
            "localRoot": "${workspaceFolder}",
            "mode": "connect",
            "attach": true,
            "address": "127.0.0.1",
            "port": 9000
        },
        {
            "name": "Attach QuickJS",
            "type": "quickjs",
            "request": "launch",
            "attach": true,
            "port": 5555,
            "program": "${workspaceFolder}/src/tests/data/test.js",
            "localRoot": "${workspaceFolder}/src/tests/data/",
            "runtimeExecutable": "/usr/local/bin/qjs"
        }
    ],
    "compounds": [
        {
            "name": "Extension + Server",
            "configurations": [ "Extension", "Server" ]
        }
    ]
}
